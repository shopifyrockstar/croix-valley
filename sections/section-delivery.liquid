        },
        {
            "type": "button",
            "name": "Button",
            "settings": [
                {
                    "type": "text",
                    "id": "link_title",
                    "label": "Button label",
                    "default": "Learn more"
                },
                {
                    "type": "text",
                    "id": "link",
                    "label": "Button link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Delivery",
            "blocks": [
